<%= form_for([@project, @project.comments.build] ) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <div class="field">
        <%= f.label :body, "コメント" %><br />
        <%= f.text_area :body, cols: 40, rows: 3, class: "form-control" %>

    </div><br/>
        <%= f.submit "コメントする", class: "btn btn-primary" %>
<% end %>